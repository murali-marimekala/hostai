# Environment Variables for AI Personal Productivity Assistant
# Copy this file to .env and fill in your values
# The .env file is automatically gitignored for security

# ===========================================
# DATABASE CONFIGURATION
# ===========================================

# Database file location (default: user home directory)
# DATABASE_PATH=~/.ai_productivity_assistant/data.db

# Database backup settings
# DATABASE_BACKUP_PATH=~/.ai_productivity_assistant/backups/

# ===========================================
# EXTERNAL API KEYS (FOR FUTURE FEATURES)
# ===========================================

# OpenAI API Key (if you want to use GPT models for advanced features)
# OPENAI_API_KEY=sk-your-openai-api-key-here

# Hugging Face API Token (for downloading pre-trained models)
# HUGGINGFACE_TOKEN=hf_your-huggingface-token-here

# ===========================================
# DEVELOPMENT SETTINGS
# ===========================================

# Enable debug mode (logs more information)
DEBUG=false

# Logging level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Enable performance profiling
PROFILE=false

# ===========================================
# SYSTEM INTEGRATION
# ===========================================

# Enable system tray icon (Linux/Windows)
SYSTEM_TRAY=true

# Auto-start on system boot
AUTO_START=false

# ===========================================
# ADVANCED ML SETTINGS
# ===========================================

# Use GPU for training (if available)
USE_GPU=false

# Model cache directory
MODEL_CACHE_DIR=~/.ai_productivity_assistant/models/

# ===========================================
# NETWORK SETTINGS (CURRENTLY UNUSED)
# ===========================================

# Allow anonymous usage statistics (helps improve the app)
# TELEMETRY=false

# Update check URL (for checking new versions)
# UPDATE_URL=https://api.github.com/repos/yourusername/ai-productivity-assistant/releases/latest

# ===========================================
# SECURITY SETTINGS
# ===========================================

# Encrypt sensitive data in database
ENCRYPT_DATABASE=false

# Encryption key (generate a strong random key)
# ENCRYPTION_KEY=your-256-bit-encryption-key-here

# ===========================================
# EXPERIMENTAL FEATURES
# ===========================================

# Enable experimental AI features
EXPERIMENTAL_FEATURES=false

# Beta model versions
USE_BETA_MODELS=false